<UserControl x:Class="FileConverter.Controls.PdfProtectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="auto" Width="555">
    <Grid Drop="MainPanel_Drop" AllowDrop="true">
        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect FadeIn, Duration=0:0:0.8}">
            <StackPanel Name="MainPanel" Orientation="Vertical" VerticalAlignment="Center" Drop="MainPanel_Drop" AllowDrop="true">
                <StackPanel Drop="MainPanel_Drop" AllowDrop="true">
                    <TextBlock Text="Drag PDF file here" FontFamily="Anton" HorizontalAlignment="Center" Foreground="Black" Margin="0,22,0,0" FontSize="18"/>
                    <materialDesign:PackIcon Name ="IconLockUnlock"  Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="200" Drop="MainPanel_Drop" AllowDrop="true" Foreground="#FF15173E"/>
                    <TextBlock Text="Set password" FontFamily="Anton" HorizontalAlignment="Center" Foreground="Black"  FontSize="18"/>
                    <materialDesign:PackIcon Width="22" Height="22"  Name="IconExclamation" Kind="exclamation" HorizontalAlignment="Right" Foreground="Red" Visibility="Hidden"/>
                    <PasswordBox Name="TextBoxPassword"  AutomationProperties.HelpText="password" PasswordChanged="TextBoxPassword_PasswordChanged"/>
                    <Button Name="ButtonProtect" FontFamily="Champagne &amp; Limousines" Content="LOCK" FontSize="18" Margin="25" Click="ButtonProtect_Click" Background="#FF122183" BorderBrush="#FF122183"/>
                    <TextBlock Name="TextBlockFile"  Text="" FontFamily="Anton" TextAlignment="Center" Foreground="Black"  FontSize="12"/>
                    <TextBlock Name="TextBlockInfo"  Text="" FontFamily="Anton" TextAlignment="Center" Foreground="Black"  FontSize="12"/>
                </StackPanel>
                
            </StackPanel>

        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
